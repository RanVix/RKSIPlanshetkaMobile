{
  "expo": {
    "name": "Планшетка",
    "slug": "RKSIPlanshetka",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rksiplanshetka",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Мобильное приложение «Планшетка». Разработчики: RanVix и Yarovich. Создано как дополнение к Telegram-боту «РКСИ Планшетка».",
    "primaryColor": "#0A84FF",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ranvix.RKSIPlanshetka",
      "buildNumber": "1",
      "infoPlist": {
        "CFBundleDisplayName": "Планшетка"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "usesCleartextTraffic": true,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.ranvix.RKSIPlanshetka",
      "versionCode": 1,
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "РКСИ Планшетка",
      "shortName": "РКСИ",
      "lang": "ru",
      "scope": "/",
      "themeColor": "#0A84FF",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      [
        "@react-native-firebase/messaging",
        {
          "android": {
            "enableGradleWatchers": false
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#111419",
          "dark": {
            "backgroundColor": "#111419"
          },
          "imageWidth": 1024
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "078dd5bf-5e0a-4d18-b428-49b32c2e10db"
      }
    }
  }
}
